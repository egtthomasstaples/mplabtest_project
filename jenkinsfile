pipeline{
    agent {label 'Linux'}
    stages {
        stage('Checkout from SCM') {
            agent {
                docker
                {
                    alwaysPull false
                    reuseNode true
                    image 'mplabx-5.25_xc16-1.36'
                }  
            }
            steps {
                checkout scm
                sh "echo hello"
            }
        }
    }
}
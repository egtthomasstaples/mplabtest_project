pipeline{
    sh """
        doctl compute droplet-action power-on 364671951
    """
    agent {label 'Linux'}
    stages {
        stage('Checkout from SCM') {
            agent {
                docker
                {
                    alwaysPull false
                    reuseNode true
                    image 'mplabx-5.25_xc16-1.36'
                }  

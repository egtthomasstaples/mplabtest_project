pipeline{
    agent {label 'Linux'}
    stages {
        stage('Checkout from SCM') {
            agent {
                docker
                {
                    image 'mplabx-5.25_xc16-1.36:latest'
                    registryUrl 'localhost:5000/ci-build'
                }  
            }
            steps {
                checkout scm
            }
        }
        stage('Ls stuff') {
            agent {
                docker {image 'mplabx-5.25_xc16-1.36:latest'}
            }
            steps {
                sh 'ls'
            }
        }
    }
}
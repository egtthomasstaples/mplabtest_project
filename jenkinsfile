pipeline{
    agent {label 'Linux'}
    stages {
        stage('Checkout from SCM') {
            agent {
                docker
                {
                    alwaysPull false
                    image 'localhost:5000/ci-build/mplabx-5.25_xc16-1.36'
                }  
            }
            steps {
                sh "echo hello"
            }
        }
    }
}